<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>User info</h2>
      <%= form_with model: @user do |f| %>
       <% if @user.errors.any? %>
        <div id="error_explanation">
         <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
          <ul>
           <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
           <% end %>
          </ul>
       </div>
      <% end %>
      <div class="form-group">
      <label for="user_name">Name</label><br>
        <%= f.text_field :name, class: "form-control" %><br>
      </div>
      
      <div class="form-group">
         <label class="form-label">Image</label><br>
         <%= f.file_field :profile_image, placeholder: "Image" %>
      </div>
      
      <div class="form-group">
        <label class="from-label">Introduction</label><br>
         <%= f.text_area :profile, class: "form-control" %>
      </div>
      <div class="form-group">
       <%= f.submit 'Update User', class: "btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

